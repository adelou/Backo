{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Address list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Compagny</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>Postcode</th>
                <th>City</th>
                <th>Phone</th>
                <th>Phonemobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('address_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.compagny }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.address1 }}</td>
                <td>{{ entity.address2 }}</td>
                <td>{{ entity.postcode }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.phoneMobile }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('address_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('address_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('address_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
