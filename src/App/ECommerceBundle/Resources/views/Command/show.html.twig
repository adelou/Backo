{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Command</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ entity.reference }}</td>
            </tr>
            <tr>
                <th>Totalpaid</th>
                <td>{{ entity.totalPaid }}</td>
            </tr>
            <tr>
                <th>Currentstate</th>
                <td>{{ entity.currentState }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('command') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('command_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
