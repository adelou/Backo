{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Command list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Totalpaid</th>
                <th>Currentstate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('command_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.reference }}</td>
                <td>{{ entity.totalPaid }}</td>
                <td>{{ entity.currentState }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('command_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('command_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('command_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
