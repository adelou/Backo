{% extends 'AppAdminBundle:Layout:admin.html.twig' %}
{% form_theme form 'AppAdminBundle:Form:fields.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form, {'method': 'PUT'}) }}
            <section class="panel">
                <header class="panel-heading">
                    Modifier un format de croping
                </header>
                <div class="panel-body">
                    {{ form_rest(form) }}
                </div>
            </section>
            <div class="col-md-12 actions">
                <a href="{{ path('croping') }}" class="btn btn-shadow btn-default"><i class="fa fa-arrow-left"></i> Retour</a>
                <button type="submit" class="btn btn-shadow btn-success pull-right"><i class="fa fa-save"></i> Enregister</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

