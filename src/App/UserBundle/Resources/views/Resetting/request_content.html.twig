{% trans_default_domain 'FOSUserBundle' %}

<body class="login-body">

<div class="container">
<form class="form-signin" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <h2 class="form-signin-heading">Mot de passe oubli√© ?</h2>
    <div class="login-wrap">
        {% if invalid_username is defined %}
            <div class="alert alert-block alert-danger fade in">
                <button data-dismiss="alert" class="close close-sm" type="button">
                    <i class="fa fa-times"></i>
                </button>
                Identifiant incorrect !
            </div>
        {% endif %}
        <input type="text" class="form-control" id="username" name="username" required="required" placeholder="Username / E-mail"/>

        <input class="btn btn-lg btn-login btn-block" type="submit" value="Valider" />
    </div>

</form>
</div>
</body>



