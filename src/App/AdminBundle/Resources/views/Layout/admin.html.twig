<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>BackOffice</title>

    {% block stylesheets %} 
    <!-- Bootstrap core CSS -->
      <link href="{{ asset('bundles/appadmin/css/bootstrap.min.css') }}" rel="stylesheet">
      <link href="{{ asset('bundles/appadmin/css/bootstrap-reset.css') }}" rel="stylesheet">
      <link href="{{ asset('bundles/appadmin/css/font-awesome/font-awesome.min.css') }}" rel="stylesheet">
      <link href="{{ asset('bundles/appadmin/css/style-responsive.css') }}" rel="stylesheet">
      <link href="{{ asset('bundles/appadmin/css/multi-select.css') }}" rel="stylesheet"/>
      <link href="{{ asset('bundles/appadmin/css/demo_table.css') }}" rel="stylesheet" />
      <link href="{{ asset('bundles/appadmin/js/jcrop/css/jquery.Jcrop.min.css') }}" rel="stylesheet" />
      <link href="{{ asset('bundles/appadmin/css/fancybox/fancybox.css') }}" rel="stylesheet" />
      <link href="{{ asset('bundles/appadmin/css/gallery.css') }}" rel="stylesheet" />
      <link href="{{ asset('bundles/appadmin/css/datepicker.css') }}" rel="stylesheet" />
      <link href="{{ asset('bundles/appadmin/css/datetimepicker.css') }}" rel="stylesheet" />
      <link href="{{ asset('bundles/appadmin/css/style.css') }}" rel="stylesheet">
      
   {% endblock %}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
  <section id="container" class="">
      <!--header start-->
      <header class="header white-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <!--logo start-->
            <a href="/" class="logo">Back<span>Office</span></a>
            <!--logo end-->

            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="">
                            <span class="username">{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}{{ app.user.username }}{% endif %}</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-key"></i> Se d√©conneter</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
      {% include "AppAdminBundle:Menu:main.html.twig" %}
      <section id="main-content">
          <section class="wrapper site-min-height">
              {% for flashMessage in app.session.flashbag.get('error') %}
                  <div class="alert alert-block alert-danger fade in">
                      <button data-dismiss="alert" class="close close-sm" type="button">
                          <i class="fa fa-times"></i>
                      </button>
                      {{ flashMessage }}
                  </div>
              {% endfor %}
              {% for flashMessage in app.session.flashbag.get('success') %}
                  <div class="alert alert-success fade in">
                      <button data-dismiss="alert" class="close close-sm" type="button">
                          <i class="fa fa-times"></i>
                      </button>
                      {{ flashMessage }}
                  </div>
              {% endfor %}
              {% for flashMessage in app.session.flashbag.get('notice') %}
                  <div class="alert alert-info fade in">
                      <button data-dismiss="alert" class="close close-sm" type="button">
                          <i class="fa fa-times"></i>
                      </button>
                      {{ flashMessage }}
                  </div>
              {% endfor %}

            {% block body %}
            {% endblock %}
          </section>
      </section>

      <footer class="site-footer">
          <div class="text-center">
              2014 &copy; BackOffice
              <a href="#" class="go-top">
                  <i class="fa fa-angle-up"></i>
              </a>
          </div>
      </footer>
      <!--footer end-->
  </section>
{% block javascripts %} 

    <!-- --- JQUERY --- -->
    <script src="{{ asset('bundles/appadmin/js/jquery-1.8.3.min.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/jquery-ui-1.9.2.custom.min.js') }}" ></script>

