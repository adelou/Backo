    <script src="{{ asset('bundles/appadmin/js/jquery-multi-select/js/jquery.multi-select.js') }}"></script>
    <script src="{{ asset('bundles/appadmin/js/jquery-multi-select/js/jquery.quicksearch.js') }}"></script>

    <!-- --- BOOTSTRAP --- -->
    <script src="{{ asset('bundles/appadmin/js/bootstrap.min.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/bootstrap-datepicker/bootstrap-datepicker.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/bootstrap-datepicker/locales/bootstrap-datepicker.fr.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js') }}" ></script>

    <!-- --- WYSIYYG --- -->
    <script src="{{ asset('bundles/appadmin/js/tinymce/tinymce.min.js') }}"></script>

    <!-- --- DATATABLE --- -->
    <script src="{{ asset('bundles/appadmin/js/jquery.dataTables.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/DT_bootstrap.js') }}" ></script>

    <!-- --- OTHER --- -->
    <script src="{{ asset('bundles/appadmin/js/count.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/common-scripts.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/spinner.min.js') }}"></script>
    <script src="{{ asset('bundles/appadmin/js/jcrop/js/jquery.Jcrop.min.js') }}"></script>
    <script src="{{ asset('bundles/appadmin/js/jquery.fancybox.pack.js') }}"></script>
    <script class="include" type="text/javascript" src="{{ asset('bundles/appadmin/js/jquery.dcjqaccordion.2.7.js') }}" ></script>
    <script src="{{ asset('bundles/appadmin/js/modernizr.custom.js') }}"></script>
    <script src="{{ asset('bundles/appadmin/js/scripts.js') }}" ></script>

{% endblock %}
  </body>
</html>
